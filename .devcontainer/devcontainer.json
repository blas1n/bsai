{
  "name": "BSAI - AI Agent Platform",
  "dockerComposeFile": "../docker-compose.dev.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  // Wait for services to be ready
  "waitFor": "onCreateCommand",
  // Lifecycle scripts
  "onCreateCommand": "bash .devcontainer/scripts/on-create.sh",
  "postStartCommand": "bash .devcontainer/scripts/post-start.sh",
  // VS Code customization
  "customizations": {
    "vscode": {
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        // Testing
        "littlefoxteam.vscode-python-test-adapter",
        // Database
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        // Docker
        "ms-azuretools.vscode-docker",
        // API
        "humao.rest-client",
        // Docs
        "yzhang.markdown-all-in-one",
        // Git
        "eamodio.gitlens",
        // Claude
        "anthropic.claude-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true,
          "editor.rulers": [
            100
          ]
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true
        }
      }
    }
  },
  // Forward ports for all services
  "forwardPorts": [
    8000, // FastAPI
    5432, // PostgreSQL
    6379, // Redis
    9090, // Prometheus
    3001 // Grafana
  ],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL"
    },
    "6379": {
      "label": "Redis"
    },
    "9090": {
      "label": "Prometheus"
    },
    "3001": {
      "label": "Grafana"
    }
  },
  // Features
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  // Environment
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "DATABASE_URL": "postgresql+asyncpg://postgres:postgres@postgres:5432/bsai",
    "REDIS_URL": "redis://redis:6379/0",
    "ENVIRONMENT": "development"
  },
  // Run as non-root user
  "remoteUser": "vscode",
  // Container user
  "containerUser": "vscode",
  // Mount configuration
  "mounts": [
    "source=claude-code-bashhistory,target=/commandhistory,type=volume",
    "source=claude-code-config,target=/home/vscode/.claude,type=volume"
  ]
}