# BSAI Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Database (use 'postgres' hostname inside devcontainer)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/bsai

# =============================================================================
# Redis Cache (use 'redis' hostname inside devcontainer)
# =============================================================================
CACHE_REDIS_URL=redis://redis:6379/0
CACHE_REDIS_MAX_CONNECTIONS=20

# =============================================================================
# Keycloak Authentication (use 'keycloak' hostname inside devcontainer)
# =============================================================================
AUTH_KEYCLOAK_URL=http://keycloak:8080
AUTH_KEYCLOAK_REALM=bsai
AUTH_KEYCLOAK_CLIENT_ID=bsai-api
# AUTH_KEYCLOAK_CLIENT_SECRET=  # Only needed for confidential clients

# =============================================================================
# API Settings
# =============================================================================
API_DEBUG=true
API_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# LLM Providers (configure at least one)
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Azure OpenAI (optional)
# AZURE_OPENAI_API_KEY=
# AZURE_OPENAI_ENDPOINT=
# AZURE_OPENAI_API_VERSION=2024-02-01

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Development
# =============================================================================
ENVIRONMENT=development
